<Page x:ConnectionId='1'
    x:Name="PagePokedex"
    x:Class="PokedexUwp.Views.Pokedex"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PokedexUwp.ViewModel"
    xmlns:data="using:Connection.Dispatchers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:PokedexPageViewModel}"
    mc:Ignorable="d">

    <Page.DataContext>
        <local:PokedexPageViewModel x:ConnectionId='2' x:Name="viewModels2"/>
    </Page.DataContext>

    <Page.Background>
        <ImageBrush>
            <ImageBrush.ImageSource>
                <BitmapImage x:ConnectionId='3' x:Name="ImageBackGround" 
                             UriSource="ms-appx:///Assets/Images/BackGroundPokedexDashboard.jpg"/>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Page.Background>

    <Grid>
        <StackPanel>
            <StackPanel Margin="0,30,0,15">
                <AutoSuggestBox x:ConnectionId='12' Text="{Binding TextAutoSuggestBox}"
                                                                        
                                                                                  
                                                                              
                                QueryIcon="Find"
                                IsEnabled="{Binding IsVisibleAutoSuggestBox}"
                                PlaceholderText="Digite por Id, Nome ou Tipe"
                                Width="300"/>
            </StackPanel>
            <StackPanel>
                <ListView x:ConnectionId='4' x:Name="listView"
                            ItemsSource="{Binding ObserverListPokemons}"
                            SelectionMode="Single"
                            Margin="20"
                            Width="540"
                            Height="475"                                  
                            Visibility="Visible"
                            Background="WhiteSmoke"
                            CornerRadius="10"
                            Opacity="0.8">
                    <ListView.ItemTemplate>
                        <DataTemplate                          >
                            <Grid>
                                <Button x:ConnectionId='8' CornerRadius="10"
                                        Width="500"
                                        Margin="6"                                       
                                        Opacity="1"
                                        HorizontalContentAlignment="Left"                                        
                                                                    
                                        Command="{Binding Path=DataContext.NavegationPageDetails, ElementName=PagePokedex}" 
                                        CommandParameter="{Binding}">
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black"/>
                                            <GradientStop Color="#FF430404" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="Ellipse"
                                                    Width ="60"
                                                    Height="60">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding Sprites.Other.Home.Front_Default}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <StackPanel>
                                            <TextBlock x:Name="TextBlockID"
                                                         Foreground="Gray"
                                                         Style="{ThemeResource BaseTextBlockStyle}"
                                                         Margin="12,6,0,0">
                                                    <Run Text="# "/>
                                                    <Run Text="{Binding Id, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="White"
                                                       Style="{ThemeResource BodyTextBlockStyle}" 
                                                       Margin="12,0,0,6"/>
                                        </StackPanel>
                                        <StackPanel Margin="80,0,5,0">
                                            <GridView ItemsSource="{Binding Types, Mode=OneWay}">
                                                <GridView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Image Source="{Binding Type.IconName}"
                                                                Height="20"
                                                                Width="20"
                                                                Margin="0,0,0,10"/>
                                                    </DataTemplate>
                                                </GridView.ItemTemplate>
                                            </GridView>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    
                </ListView>
                <ProgressRing x:ConnectionId='5' x:Name="Loading"                
                              Visibility="{Binding IsVisibleProgressRing}"                 
                              IsActive="True"                
                              Width="60"
                              Height="60"
                              Grid.ColumnSpan="5"
                              Grid.RowSpan="6"
                              Foreground="DarkRed"                
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                />
            </StackPanel>
            
            <!-- <Canvas x:Name="stackPanel" Margin="15"                        
                        HorizontalAlignment="Center"
                        Width="auto">
                <StackPanel x:Name="stackPanel1" 
                            Canvas.Left="-308" 
                            Canvas.Top="28"
                            RenderTransformOrigin="0.5,0.5">
                    <StackPanel.RenderTransform>
                        <CompositeTransform/>
                    </StackPanel.RenderTransform>

                    
                </StackPanel>

                
            </Canvas> -->
        </StackPanel>
    </Grid>
</Page>

